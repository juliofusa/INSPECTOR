<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#56b3a6ff"
    >

    <TextView
        android:layout_width="777dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Large Text"
        android:id="@+id/lista_fecha"
        android:hint="FECHA"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/lista_hora"
        android:layout_alignEnd="@+id/lista_hora"
        android:gravity="center_horizontal"
        android:focusable="false"
        android:textColor="#fff11f00" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Medium Text"
        android:id="@+id/lista_filtro"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:gravity="center_horizontal"
        android:focusable="false"
        android:layout_below="@+id/lista_fecha"
        android:layout_toStartOf="@+id/lista_anotador"
        android:layout_toLeftOf="@+id/lista_anotador" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/lista_anotador"
        android:layout_alignTop="@+id/lista_hora"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/lista_hora"
        android:layout_toEndOf="@+id/lista_hora"
        android:gravity="center_horizontal"
        android:background="#5effe0df"
        android:layout_alignBottom="@+id/lista_hora"
        android:focusable="false"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/lista_hora"
        android:gravity="center_horizontal"
        android:focusable="false"
        android:layout_below="@+id/lista_filtro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:textColor="#fff11f00" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAQUINA DE TRAZAS"
        android:id="@+id/LISTA_TRAZAS"
        android:checked="true"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/lista_filtro"
        android:layout_alignParentTop="true"
        android:focusable="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/lista_contador"
        android:layout_alignBaseline="@+id/LISTA_TRAZAS"
        android:layout_alignBottom="@+id/LISTA_TRAZAS"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:focusable="false"
        android:background="@android:color/black"
        android:textColor="@android:color/white" />

</RelativeLayout>